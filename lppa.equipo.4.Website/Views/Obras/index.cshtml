
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@model IEnumerable<lppa.equipo._4.Data.Model.Obras>
@{
    ViewBag.Title = "Index";
}

<div class="post">
    <h2>Obras</h2>
    <p class="byline">Hay un total de @Enumerable.Count(Model) Obras</p>
    <p>
        <a href="/Obras/Create" class="btn-input">Nuevo Obras</a>
    </p>

    <div>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ArtistId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuantitySold)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AvgStars)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArtistId)
            </td>
            <td>
                <img id="obras" src="@Url.Content(@item.Image)" alt="" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantitySold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvgStars)
            </td>
            <td>
                @Html.ActionLink("Agregar", "Buy", new { id = item.Id })  
                @if (Request.IsAuthenticated && (User.IsInRole("Vendedor") || User.IsInRole("Administrador")))
                {
                    <b>|</b>
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
            }

        </table>
    </div>


